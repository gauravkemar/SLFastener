<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvSrNo"
        app:layout_constraintHorizontal_weight="0.10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Sr No"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvKGRNNO">

    </TextView>

    <TextView
        android:id="@+id/tvKGRNNO"
        app:layout_constraintHorizontal_weight="0.20"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="KGRN NO"
        app:layout_constraintStart_toEndOf="@+id/tvSrNo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvBPCodeName">

    </TextView>

    <TextView
        android:id="@+id/tvBPCodeName"
        app:layout_constraintHorizontal_weight="0.20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="BP Code Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvType"
        app:layout_constraintStart_toEndOf="@+id/tvKGRNNO">

    </TextView>

    <TextView
        android:id="@+id/tvType"
        app:layout_constraintHorizontal_weight="0.15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBPCodeName"
        app:layout_constraintEnd_toStartOf="@+id/tvInitiatedOn"
        >

    </TextView>

    <TextView
        android:id="@+id/tvInitiatedOn"
        app:layout_constraintHorizontal_weight="0.20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Initiated On"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvType"
        app:layout_constraintEnd_toStartOf="@+id/tvStatus">

    </TextView>

    <TextView
        android:id="@+id/tvStatus"
        app:layout_constraintHorizontal_weight="0.15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Status"
        app:layout_constraintStart_toEndOf="@+id/tvInitiatedOn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>