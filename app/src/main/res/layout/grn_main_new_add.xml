        <include
            android:id="@+id/batchesHeader"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/create_batches_first_item"
            app:layout_constraintVertical_weight="0.10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rcBatches"
            app:layout_constraintTop_toBottomOf="@+id/clAddBatch"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcBatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="0.85"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batchesHeader"
            tools:listitem="@layout/create_batchs_item" />
