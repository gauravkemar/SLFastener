<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/header_bg">

    <TextView
        android:id="@+id/tvPoNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="PO No"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvGdPoNo"
        app:layout_constraintHorizontal_weight="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvGdPoNo"
        app:layout_constraintStart_toEndOf="@+id/tvPoNo"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvGdPoNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="DGPO NO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLineItemDesc"
        app:layout_constraintHorizontal_weight="0.09"
        app:layout_constraintStart_toEndOf="@+id/tvPoNo"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLineItemDesc"
        app:layout_constraintStart_toEndOf="@+id/tvGdPoNo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLineItemDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="Line Code"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvItemDesc"
        app:layout_constraintHorizontal_weight="0.10"
        app:layout_constraintStart_toEndOf="@+id/tvGdPoNo"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvItemDesc"
        app:layout_constraintStart_toEndOf="@+id/tvLineItemDesc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="Item Desc"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvPuom"
        app:layout_constraintHorizontal_weight="0.10"
        app:layout_constraintStart_toEndOf="@+id/tvLineItemDesc"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvPuom"
        app:layout_constraintStart_toEndOf="@+id/tvItemDesc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPuom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:text="PUOM"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvQuantityPrice"
        app:layout_constraintHorizontal_weight="0.09"
        app:layout_constraintStart_toEndOf="@+id/tvItemDesc"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvQuantityPrice"
        app:layout_constraintStart_toEndOf="@+id/tvPuom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuantityPrice"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_margin="2dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="$/₹/€"
        app:layout_constraintHorizontal_weight="0.07"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPuom"
        app:layout_constraintEnd_toStartOf="@+id/tvPoQty">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvPoQty"
        app:layout_constraintStart_toEndOf="@+id/tvQuantityPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPoQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:text="PO Qty"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvOpenQty"
        app:layout_constraintHorizontal_weight="0.07"
        app:layout_constraintStart_toEndOf="@+id/tvQuantityPrice"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvOpenQty"
        app:layout_constraintStart_toEndOf="@+id/tvPoQty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOpenQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:text="Open Qty"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvQty"
        app:layout_constraintHorizontal_weight="0.07"
        app:layout_constraintStart_toEndOf="@+id/tvPoQty"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvQty"
        app:layout_constraintStart_toEndOf="@+id/tvOpenQty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:text="Qty"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEpiryDt"
        app:layout_constraintHorizontal_weight="0.09"
        app:layout_constraintStart_toEndOf="@+id/tvOpenQty"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEpiryDt"
        app:layout_constraintStart_toEndOf="@+id/tvQty"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEpiryDt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:text="Expiry Dt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btCreatebatches"
        app:layout_constraintHorizontal_weight="0.09"
        app:layout_constraintStart_toEndOf="@+id/tvQty"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btCreatebatches"
        app:layout_constraintStart_toEndOf="@+id/tvEpiryDt"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btCreatebatches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSaveLineItem"
        app:layout_constraintHorizontal_weight="0.06"
        app:layout_constraintStart_toEndOf="@+id/tvEpiryDt"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="+ Create"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSaveLineItem"
        app:layout_constraintStart_toEndOf="@+id/btCreatebatches"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tvSaveLineItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:src="@drawable/ic_save_black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDeleteLineItem"
        app:layout_constraintHorizontal_weight="0.04"
        app:layout_constraintStart_toEndOf="@+id/btCreatebatches"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDeleteLineItem"
        app:layout_constraintStart_toEndOf="@+id/tvSaveLineItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tvDeleteLineItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:src="@drawable/ic_delete_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.05"
        app:layout_constraintStart_toEndOf="@+id/tvSaveLineItem"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>