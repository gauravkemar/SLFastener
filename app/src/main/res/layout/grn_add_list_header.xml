<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPoNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="PO No"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDgPoNo">

    </TextView>

    <TextView
        android:id="@+id/tvDgPoNo"

        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="DGPO NO"
        app:layout_constraintStart_toEndOf="@+id/tvPoNo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLineItemDesc">

    </TextView>

    <TextView
        android:id="@+id/tvLineItemDesc"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Line Item Desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvItemDesc"
        app:layout_constraintStart_toEndOf="@+id/tvDgPoNo">

    </TextView>

    <TextView
        android:id="@+id/tvItemDesc"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Item Desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLineItemDesc"
        app:layout_constraintEnd_toStartOf="@+id/tvOpenQty"
        >

    </TextView>

    <TextView
        android:id="@+id/tvOpenQty"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Open Qty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvItemDesc"
        app:layout_constraintEnd_toStartOf="@+id/tvPuom">

    </TextView>

    <TextView
        android:id="@+id/tvPuom"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="PUOM"
        app:layout_constraintStart_toEndOf="@+id/tvOpenQty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvQty">

    </TextView>

    <TextView
        android:id="@+id/tvQty"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Qty"
        app:layout_constraintStart_toEndOf="@+id/tvPuom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEpiryDt">

    </TextView>

    <TextView
        android:id="@+id/tvEpiryDt"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Expiry Dt"
        app:layout_constraintStart_toEndOf="@+id/tvQty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvBatchNo">

    </TextView>

    <TextView
        android:id="@+id/tvBatchNo"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Batch No"
        app:layout_constraintStart_toEndOf="@+id/tvEpiryDt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

   <!-- <TextView
        android:id="@+id/tvBarcodeNo"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Barcode No"
        app:layout_constraintStart_toEndOf="@+id/tvBatchNo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>-->


</androidx.constraintlayout.widget.ConstraintLayout>