<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/page_bg">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/home_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvHeader"
                    style="@style/MyCardView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:cardBackgroundColor="@color/header_bg"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/clCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="0.10"

                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/wmsLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="50dp"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/kwms_logo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/slFastenerLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="80dp"
                            android:src="@drawable/sl_fastener_logo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/wmsLogo"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/logoutBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_border_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/settingBtn"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:src="@drawable/logout"

                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/settingBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_border_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvSupervisor"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:src="@drawable/baseline_settings_24"

                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tvSupervisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Supervisor"
                            android:textColor="@color/tv_sub_head_color"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCenter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    app:layout_constraintBottom_toTopOf="@id/clFooter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cvHeader"
                    app:layout_constraintVertical_weight="0.88">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvHeaders"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintBottom_toTopOf="@+id/mcvRcLineItem"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_weight="0.15">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clAddDelete"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <include

                                    android:id="@+id/grnAddHeader"
                                    layout="@layout/grn_add_list_header"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    app:layout_constraintBottom_toTopOf="@+id/lineItemDetails"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/lineItemDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:background="@color/header_bg"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/grnAddHeader">

                                    <TextView
                                        android:id="@+id/tvPoNo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="PO No"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvGdPoNo"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvGdPoNo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="DGPO NO"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvLineItemDesc"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvPoNo"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvLineItemDesc"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="Line Code"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvItemDesc"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvGdPoNo"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvItemDesc"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="Item Desc"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvOpenQty"
                                        app:layout_constraintHorizontal_weight="0.15"
                                        app:layout_constraintStart_toEndOf="@+id/tvLineItemDesc"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvOpenQty"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="Open Qty"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvPuom"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvItemDesc"
                                        app:layout_constraintTop_toTopOf="parent"></TextView>

                                    <TextView
                                        android:id="@+id/tvPuom"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="PUOM"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvQty"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvOpenQty"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvQty"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="Qty"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvEpiryDt"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvPuom"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>

                                    <TextView
                                        android:id="@+id/tvEpiryDt"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="Expiry Dt"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/Batches"
                                        app:layout_constraintHorizontal_weight="0.15"
                                        app:layout_constraintStart_toEndOf="@+id/tvQty"
                                        app:layout_constraintTop_toTopOf="parent">

                                    </TextView>


                                    <TextView
                                        android:id="@+id/Batches"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="2dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="@android:color/transparent"
                                        android:padding="5dp"
                                        android:text="Expiry Dt"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvEpiryDt"
                                        app:layout_constraintTop_toTopOf="parent"/>


                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvRcLineItem"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintBottom_toTopOf="@+id/clSubmit"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mcvHeaders"
                            app:layout_constraintVertical_weight="0.75">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/clMidChild1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    >
                                    <TextView
                                        android:id="@+id/tvSrnNo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="SR#"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvBatchBarcodeNo"
                                    />
                                    <TextView
                                        android:id="@+id/tvBatchBarcodeNo"
                                        android:layout_width="0dp"
                                        android:text="BATCH BARCODE NO"
                                        android:textAlignment="center"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintHorizontal_weight="0.25"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/tvSrnNo"
                                        app:layout_constraintEnd_toStartOf="@+id/tvWeight"
                                    />

                                    <TextView
                                        android:id="@+id/tvWeight"
                                        android:layout_width="0dp"
                                        android:text="WEIGHT"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/tvBatchBarcodeNo"
                                        app:layout_constraintEnd_toStartOf="@+id/tvGenerateBarcode"
                                    />
                                    <TextView
                                        android:id="@+id/tvGenerateBarcode"
                                        android:layout_width="0dp"
                                        android:text="Generate Barcode"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintHorizontal_weight="0.20"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/tvWeight"
                                        app:layout_constraintEnd_toStartOf="@+id/tvBarcodeNo"
                                    />
                                    <TextView
                                        android:id="@+id/tvBarcodeNo"
                                        android:layout_width="0dp"
                                        android:text="Barcode No"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintHorizontal_weight="0.15"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/tvGenerateBarcode"
                                        app:layout_constraintEnd_toStartOf="@+id/tvEmpty1"
                                    />
                                    <TextView
                                        android:id="@+id/tvEmpty1"
                                        android:layout_width="0dp"
                                        android:text=""
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvBarcodeNo"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/tvEmpty2"

                                    />
                                    <TextView
                                        android:id="@+id/tvEmpty2"
                                        android:layout_width="0dp"
                                        android:text=""
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintHorizontal_weight="0.10"
                                        app:layout_constraintStart_toEndOf="@+id/tvEmpty1"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                    />



                                </androidx.constraintlayout.widget.ConstraintLayout>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rcBatchs"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toBottomOf="@+id/clMidChild1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    tools:listitem="@layout/create_batches_parent_item"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </com.google.android.material.card.MaterialCardView>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mcvRcLineItem"
                            app:layout_constraintVertical_weight="0.10">


                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/mcvSubmit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:clickable="true"
                                app:cardBackgroundColor="@color/add_btn_color"
                                app:cardCornerRadius="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/mcvCancel"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:id="@+id/tvAddNewBatch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="10dp"
                                        android:paddingTop="10dp"
                                        android:paddingEnd="10dp"
                                        android:paddingBottom="10dp"
                                        android:text="Add New Batch"
                                        android:textColor="@color/white"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/ivAddbatch"/>
                                    <ImageView
                                        android:id="@+id/ivAddbatch"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:src="@drawable/add_circle_white"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/tvAddNewBatch"
                                        />

                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/mcvCancel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:clickable="true"

                                app:cardCornerRadius="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/mcvSaveToDraft"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingStart="20dp"
                                    android:background="@drawable/round_border_blue"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="20dp"
                                    android:paddingBottom="10dp"
                                    android:text="    Cancel    "
                                    android:textColor="@color/blue" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/mcvSaveToDraft"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:clickable="true"
                                app:cardBackgroundColor="@color/blue"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                     >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingStart="20dp"
                                        android:paddingTop="10dp"
                                        android:paddingEnd="20dp"
                                        android:paddingBottom="10dp"
                                        android:text="Save and Back"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
